      @media (min-width: 768px) {
      .bd-placeholder-img-lg {
      font-size: 3.5rem;
      }
      }
      .badge{
        color:black;
        background-color:white
      }
      #rr
      {
        margin-bottom:15px;
      }
      #user
        {
          color:white;margin-left:10px;
        }
    // Custom styles for this template
    link(href='navbar-top.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
      a.navbar-brand(href='#') Spare-Shop
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.mr-auto.navbar-left
          li.nav-item
            a.nav-link(href='/dashboard')  Home
          li.nav-item
            a.nav-link(href='/inventory')  Inventory
        ul.navbar-nav.ml-auto.navbar-left
          if user.role==='Administrator'
            li.nav-item
              a.nav-link(href='/manage')  Manage Users
          
          li.nav-item
            a.nav-link(href='/sales') Sales
          li.nav-item
            a.nav-link(href='/logout') Logout
        span#user 
         i.fa.fa-user 
         &nbsp;
         | #{user.firstname} #{user.lastname}
          
            
      
    main.container(role='main')
      .jumbotron
        if sales.length === 0
         h1 Sales - Total Amount: 0
        if sales.length !==0
          h1 Sales - Total Amount: #{total}
        #rr
         .row
          .col
            form(action="/searchSales", method="post")
              .row
                .col
                  label(for="") Date from:
                  input.form-control(type="date",name='from',required)
                .col
                  label(for="") Date to:
                  input.form-control(type="date",name='to',required)
                .col
                  br
                  
                  button.btn.btn-success Submit
          .col-2
             br
             a(href="/today").btn.btn-primary Today Sales
        table#example.table.table-striped.table-bordered(style='width:100%')
            thead
                tr
                 
                  th(scope='col') Product
                  th(scope='col') Quantity
                  th(scope='col') Price
                  th(scope='col') Added On
            tbody
              each sale in sales
                 tr
                  td=sale.name
                  td=sale.quantity
                  td=sale.price
                  td=sale.date
                
                   
            tfoot
                tr
         
                  th(scope='col') Product
                  th(scope='col') Quantity
                  th(scope='col') Price
                  th(scope='col') Added On
        
                 
       
    script(src="https://code.jquery.com/jquery-3.3.1.js")
