  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
      a.navbar-brand(href='#') Spare-Shop
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/dashboard')  Dashboard
          li.nav-item
            a.nav-link(href='/inventory')  Inventory
          li.nav-item
            a.nav-link(href='/cart')  Cart-
             i.badge #{carts.length}    
          li.nav-item
            a.nav-link(href='/sales') Sales
          li.nav-item
            a.nav-link(href='/logout') Logout
             
    .row
     .col
     .col  
        main.container(role='main')
          .jumbotron
              .page-header
                h3 Add a new item
              hr
              form(action='/addproducts',method='POST')
                .form-group
                  label(for='exampleInputProduct') Product Name:
                  input#exampleInputProduct.form-control(type='text',  placeholder='Enter product name',name='name',required)
                .form-group
                  label(for='exampleInputQuantity') Product Quantity:
                  input#exampleInputQunatity.form-control(type='number', placeholder='Enter product quantity',name='quantity',required)
                .form-group
                  label(for='exampleInputPrice') Product Price Per Unit:
                  input#exampleInputPrice.form-control(type='number', placeholder='Enter product price',name='price',required)
                   
                .form-group
                  label(for='exampleInputDate') Received On:
                  input#exampleInputDate.form-control(type='date', placeholder='Added On',required,name='date')
                   
               
                
                button.btn.btn-primary.btn-block(type='submit') Save and Continue
              br 
              a(href="/inventory").btn.btn-dark.btn-block Exit

     .col
